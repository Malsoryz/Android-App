<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dashboard_menu_button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/normal_purple</item>
        <item name="backgroundTint">@color/dark_purple</item>
    </style>

    <style name="answer_button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/normal_purple</item>
        <item name="backgroundTint">@color/dark_purple</item>
    </style>
</resources>